[Unit]
Description=UOS Admin Upload Service
After=network.target

[Service]
Type=simple
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/.openclaw/workspace/admin-server
ExecStart=/bin/bash -lc 'set -a; source /home/ec2-user/.openclaw/workspace/admin-server/.env; set +a; exec /usr/bin/node /home/ec2-user/.openclaw/workspace/admin-server/src/server.js'
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
